// @font-face declarations

@font-face {
    font-family: 'Jude Bold';
    src: url('fonts/JudeBold.woff2') format('woff2'),
        url('fonts/JudeBold.woff') format('woff');
    font-weight: bold;
    font-style: normal;
}

@font-face {
    font-family: 'Jude Regular Italic';
    src: url('fonts/JudeRegularItalic.woff2') format('woff2'),
        url('fonts/JudeRegularItalic.woff') format('woff');
    font-weight: normal;
    font-style: italic;
}

@font-face {
    font-family: 'Alte Haas Grotesk';
    src: url('fonts/AlteHaasGrotesk.woff2') format('woff2'),
        url('fonts/AlteHaasGrotesk.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'Alte Haas Grotesk Bold';
    src: url('fonts/AlteHaasGrotesk_Bold.woff2') format('woff2'),
        url('fonts/AlteHaasGrotesk_Bold.woff') format('woff');
    font-weight: bold;
    font-style: normal;
}
