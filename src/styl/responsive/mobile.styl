body
  &.drawer-open
    #drawer
      transform: translateY(0)
    #close-overlay
      pointer-events: all

.p-max-width
  p
    max-width: 550px

#drawer
  position: fixed
  top: 0
  right: 0
  width: 95vw
  height: 100vh
  overflow: scroll
  transform: translateX(150%)
  background-color: $color-black
  color: $color-white
  z-index: 300
  box-shadow: -50px 0px 200px 0px rgba(69, 79, 255, .3);
  transition: transform 500ms ease-in-out

.drawer-container
  width: 90%
  margin: 0 auto

#close-drawer
  position: fixed
  top: 15px
  right: 15px

#close-overlay
  position: fixed
  top: 0
  right: 0
  height: 100vh
  width: 100vw
  opacity: 0
  z-index: 200
  pointer-events: none

#light
  width: 80vw
  height: 800px
  background: transparent
  position:fixed
  z-index: 100
  top: 0
  left: -20vw
  mix-blend-mode: soft-light
  pointer-events: none
  transform-origin: 0% 50%
  svg
    height: 100%
    width: 100%
